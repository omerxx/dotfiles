{
  "plugin": [
    "oh-my-opencode",
    "opencode-beads"
  ],
  "theme": "catppuccin",
  "$schema": "https://opencode.ai/config.json",
  "model": "quotio/claude-sonnet-4-5",
  "watcher": {
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/.nuxt/**",
      "**/coverage/**",
      "**/__pycache__/**",
      "**/.venv/**",
      "**/venv/**",
      "**/.cache/**"
    ]
  },
  "mcp": {
    "agent-mail": {
      "type": "remote",
      "url": "http://127.0.0.1:8765/mcp/",
      "enabled": true
    }
  },
  "provider": {
    "quotio": {
      "api": "openai",
      "id": "openai",
      "npm": "@ai-sdk/openai",
      "name": "Quotio (CLIProxyAPI)",
      "env": [
        "QUOTIO_API_KEY"
      ],
      "options": {
        "baseURL": "http://127.0.0.1:8317/v1"
      },
      "models": {
        "gemini-3-pro-high": {
          "name": "Gemini 3 Pro High (Quotio)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "gemini-3-pro-low": {
