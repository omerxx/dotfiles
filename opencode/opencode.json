{
  "plugin": [
    "oh-my-opencode"
  ],
  "theme": "catppuccin",
  "$schema": "https://opencode.ai/config.json",
  "model": "quotio/gemini-claude-sonnet-4-5",
  "small_model": "quotio/gemini-3-flash-preview",
  "watcher": {
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/.nuxt/**",
      "**/coverage/**",
      "**/__pycache__/**",
      "**/.venv/**",
      "**/venv/**",
      "**/.cache/**"
    ]
  },
  "mcp": {},
  "provider": {
    "quotio": {
      "api": "openai",
      "id": "openai",
      "npm": "@ai-sdk/openai",
      "name": "Quotio (CLIProxyAPI)",
      "env": [
        "QUOTIO_API_KEY"
      ],
      "options": {
        "baseURL": "http://127.0.0.1:8317/v1"
      },
      "models": {
        "gemini-claude-opus-4-5-thinking": {
          "name": "Gemini Claude Opus 4.5 Thinking (Quotio)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
