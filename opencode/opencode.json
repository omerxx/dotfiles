{
  "plugin": [
    "oh-my-opencode"
  ],
  "theme": "catppuccin",
  "$schema": "https://opencode.ai/config.json",
  "model": "quotio/gemini-claude-sonnet-4-5",
  "small_model": "quotio/gemini-3-flash-preview",
  "watcher": {
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/.opencode/worktrees/**",
      "**/dist/**",
      "**/build/**",
      "**/.next/**",
      "**/.nuxt/**",
      "**/coverage/**",
      "**/__pycache__/**",
      "**/.venv/**",
      "**/venv/**",
      "**/.cache/**"
    ]
  },
  "mcp": {},
  "provider": {
    "quotio": {
      "name": "Quotio",
      "npm": "@ai-sdk/anthropic",
      "env": ["QUOTIO_API_KEY"],
      "options": {
        "baseURL": "http://127.0.0.1:8317/v1",
        "timeout": 600000
      },
      "models": {
        "gemini-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 10000
            }
          },
          "reasoning": true
        },
        "gemini-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5",
          "limit": {
            "context": 200000,
            "output": 64000
          }
        },
        "gemini-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 10000
            }
          },
          "reasoning": true
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview",
          "limit": {
            "context": 1048576,
            "output": 65536
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview",
          "limit": {
            "context": 1048576,
            "output": 65536
          }
        },
        "gemini-3-pro-image-preview": {
          "name": "Gemini 3 Pro Image Preview",
          "limit": {
            "context": 1048576,
            "output": 65536
          }
        },
        "gpt-oss-120b-medium": {
          "name": "GPT OSS 120B Medium",
          "limit": {
            "context": 128000,
            "output": 16384
          }
        }
      }
    }
  }
}
