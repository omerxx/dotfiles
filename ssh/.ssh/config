# GitHub - uses 1Password SSH agent
Host github.com
    HostName github.com
    User git
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"

Host *
    SendEnv LANG LC_*
    ForwardX11 no
    ForwardAgent yes
    AddressFamily inet
    ServerAliveInterval 15
    ConnectTimeout 20
    # Use 1Password SSH agent for all hosts (comment out if not using 1Password)
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"

Host bastion
    User ec2-user
    Hostname bastion.domain.com
    IdentityFile ~/.ssh/id_rsa
